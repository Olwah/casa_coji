extends base

block content
    .food
        .hero.divider__mountain--bottom
            .hero__title Food
            .hero__img
                img(src='/img/casa_coji_kitchen_night.jpeg')
        .food__about.divider__mountain
            h2.food__about-title Casa Coji's Vegetarian Kitchen
            h3.food__about-info Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptate amet nobis esse modi. Nihil sint praesentium ipsum consequatur id, similique consequuntur minima! Mollitia, aut? Velit ab aspernatur suscipit quidem qui? 
        .food__gallery.divider__mountain
            //- Primary Splide slideshow
            #food-slider.splide
                .splide__track
                    .splide__list
                        each item in food
                            .splide__slide
                                img(src=`/img/${item.image}`)
                                .food__highlight 
                                    .food__highlight-container
                                        .food__highlight-title= item.name
                                        .food__highlight-info= item.summary
                                    .food__highlight-price= `$${item.price} full / $${item.priceHalfPortion} half`
            //- Secondary thumbnail nav slides
            #foodNav-slider.splide
                .splide__track
                    ul.splide__list
                        each item in food
                            li.splide__slide
                                img(src=`/img/${item.image}`)
        .food__drinks.divider__mountain
            .food__drinks-title Drinks
            .food__drinks-about Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptate amet nobis esse modi. Nihil sint praesentium ipsum consequatur id, similique consequuntur minima! Mollitia, aut? Velit ab aspernatur suscipit quidem qui?
            .food__drinks-item 
                .food__drinks-item--alcohol 
                    h3 Alcohol
                .food__drinks-item--soft 
                    h3 Soft Drinks
        .home__merge
                    